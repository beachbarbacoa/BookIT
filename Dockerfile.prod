# Build stage
FROM node:20-slim AS builder
WORKDIR /app
COPY . ./
RUN cd wasp-core && npm install
RUN cd wasp-core && npm run build

# Production stage
FROM node:20-slim
WORKDIR /app
COPY --from=builder /app/wasp-core/.wasp/build/ ./build
COPY --from=builder /app/wasp-core/node_modules ./node_modules
ENV NODE_ENV production
EXPOSE 3000
CMD ["node", "build/server.js"]